<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/group_chat_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/group_info_back"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/bt_back_selector"
                android:layout_marginLeft="12dp" />

            <TextView
                android:id="@+id/group_info_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="群资料"
                android:textColor="@color/white_color"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/group_info_more"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_format_list_24dp"
                android:layout_marginRight="12dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/group_info_img1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <com.will.gps.layout.CircleImageView
                android:id="@+id/group_info_img2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:scaleType="fitXY"
                android:src="@mipmap/qunliao"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/group_info_txtname"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="群名称"
                android:gravity="center|start"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/group_info_img2"/>
            <TextView
                android:id="@+id/group_info_txtnum"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="群号码"
                android:gravity="center_vertical"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/group_info_img2"/>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/group_info_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp" />
</LinearLayout>