<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingEnd="16dp"
    android:paddingStart="16dp"
    android:background="@drawable/default_click_style_1">
    <ImageView
        android:id="@+id/expandable_list_group_indicator"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/expandable_list_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/group_unread_message_count"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/unread_message"
        android:gravity="center"
        android:padding="0dp"
        android:textColor="#ffffff"
        android:textScaleX="1.5"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_gravity="end|center_vertical"/>
</LinearLayout>