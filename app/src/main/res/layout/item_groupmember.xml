<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <com.will.gps.view.CircleImageView
        android:id="@+id/user_photo"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:background="@drawable/login_picture_bg"
        android:contentDescription="@string/app_name"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:src="@mipmap/qunliao"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/user_photo"
        android:orientation="vertical"
        android:layout_marginStart="5dp">

        <TextView
            android:id="@+id/member_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="张三"
            android:textSize="20sp"
            android:layout_toStartOf="@id/send_time"
            android:layout_alignParentStart="true"/>
        <TextView
            android:id="@+id/member_user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12345678910"
            android:textSize="20sp"
            android:layout_toStartOf="@id/send_time"
            android:layout_alignParentStart="true"/>

    </LinearLayout>

</RelativeLayout>